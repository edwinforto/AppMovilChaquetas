<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100px">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgServicio"
                    android:layout_width="120dp"

                    android:layout_height="111dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textServicio"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicboys"
                    android:lines="3"
                    android:padding="20px"
                    android:text="Compra y adquiere\nde forma inmediata\nvarios productos."
                    android:textColor="@color/white"
                    android:textSize="13pt" />

                <CheckBox
                    android:id="@+id/favServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/Yellow"
                    android:fontFamily="@font/cooper"
                    android:text="Fav"
                    android:textColor="@color/white" />

            </LinearLayout>

        </TableRow>

    </TableLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>