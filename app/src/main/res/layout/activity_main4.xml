<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            app:srcCompat="@mipmap/ic_tuchaqueta" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nuestras Sucursales"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textColorHighlight="#5A2020"
            android:textDirection="firstStrong"
            android:textSize="24sp"
            android:typeface="serif" />

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="-8"
            android:text="Tenemos sedes en Bogotá y envíos para toda Colombia"
            android:textAlignment="center"
            android:textColor="#951515"
            android:textColorHighlight="#5A2020"
            android:textDirection="firstStrong"
            android:textSize="24sp"
            android:typeface="serif" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagen6"
                    android:layout_width="72dp"
                    android:layout_height="39dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/texto6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CC.Iserra 100"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagen7"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/texto7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CC. Plaza imperial"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagen8"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/texto8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C.C. Plaza de la Américas"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagen9"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:text="C.C.Titan Plaza"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:typeface="serif" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/t_c_2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>