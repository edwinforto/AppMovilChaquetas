<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Red"
    tools:context=".Vista.Fragment_Servicios">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/servTit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Yellow"
        android:fontFamily="@font/cooper"
        android:text="SERVICIOS"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/Red"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40pt">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/compraF"
                    android:layout_width="120dp"
                    android:layout_height="111dp"

                    app:srcCompat="@drawable/buyicon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comicboys"
                    android:lines="3"
                    android:padding="20px"
                    android:text="Compra y adquiere\nde forma inmediata\nvarios productos."
                    android:textColor="@color/white"
                    android:textSize="13pt" />

                <CheckBox
                    android:id="@+id/favCompra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:buttonTint="@color/Yellow"
                    android:text="Fav"
                    android:fontFamily="@font/cooper"
                    android:textColor="@color/white" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100px"
            android:padding="5px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/limpiarF"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    app:srcCompat="@drawable/lawndry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comicboys"
                    android:lines="3"
                    android:padding="20px"
                    android:text="Tráenos tus chaquetas y te las lavamos."
                    android:textColor="@color/white"
                    android:textSize="14pt" />

                <CheckBox
                    android:id="@+id/favLavar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fav"
                    android:fontFamily="@font/cooper"
                    android:layout_gravity="center"
                    android:buttonTint="@color/Yellow"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cambioF"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:layout_marginLeft="5px"

                    app:srcCompat="@drawable/exchang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comicboys"
                    android:lines="4"
                    android:padding="20px"
                    android:text="¿Cansado de usar lo mismo? trae tu chaqueta y cámbiala."
                    android:textColor="@color/white"
                    android:textSize="12pt" />

                <CheckBox
                    android:id="@+id/favCambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:buttonTint="@color/Yellow"
                    android:text="Fav"
                    android:fontFamily="@font/cooper"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </TableRow>

    </TableLayout>


</FrameLayout>